generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id               String   @id @default(uuid())
  firstName        String
  lastName         String
  phone            String   @unique
  pin              String
  balance          Float    @default(0)
  flwAccountNumber String?
  flwBankName      String?
  flwAccountName   String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  transactions Transaction[]
  ledger       WalletLedger[]
}

model Transaction {
  id             String   @id @default(uuid())
  tx_ref         String   @unique
  flutterwaveId  Int?     @unique
  type           String
  status         String
  phone          String
  amount         Float
  agentId        String?
  planId         String?
  productId      String?
  idempotencyKey String?  @unique
  paymentData    Json?
  deliveryData   Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  agent    Agent?    @relation(fields: [agentId], references: [id])
  dataPlan DataPlan? @relation(fields: [planId], references: [id])
  product  Product?  @relation(fields: [productId], references: [id])
}

model WalletLedger {
  id            String   @id @default(uuid())
  agentId       String
  direction     String   // CREDIT / DEBIT
  amount        Float
  balanceBefore Float
  balanceAfter  Float
  reference     String
  source        String
  createdAt     DateTime @default(now())

  agent Agent @relation(fields: [agentId], references: [id])
}

model DataPlan {
  id        String   @id @default(uuid())
  network   String
  data      String
  validity  String
  price     Float
  planId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Transaction Transaction[]
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  category  String   @default("device")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Transaction Transaction[]
}
